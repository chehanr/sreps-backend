{
  "name": "sreps-backend",
  "description": "SRePs backend.",
  "image": "heroku/python",
  "repository": "",
  "keywords": ["python", "django"],
  "addons": ["heroku-postgresql"],
  "env": {
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "2"
    },
    "DJANGO_SECRET_KEY": {
      "description": "The secret key for the Django application.",
      "generator": "secret"
    },
    "DJANGO_DEBUG": {
      "value": "True"
    },
    "ALLOWED_HOSTS": {
      "value": "127.0.0.1,localhost,.herokuapp.com"
    },
    "TIME_ZONE": {
      "value": "UTC"
    }
  },
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "python manage.py collectstatic --noinput",
        "test": "python manage.py test"
      }
    }
  }
}